<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Vertical accent bar for status -->
        <View
            android:id="@+id/status_accent_bar"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@color/success"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/booking_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                tools:text="Room Booking" />

            <TextView
                android:id="@+id/booking_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/on_surface"
                tools:text="Check-in: Aug 15, 2023\nCheck-out: Aug 18, 2023" />

            <!-- Status badge -->
            <TextView
                android:id="@+id/booking_status_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Confirmed"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/success"
                android:gravity="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/booking_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                tools:text="Total: $450.00" />

            <Button
                android:id="@+id/cancel_booking_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cancel Booking"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/error"
                app:strokeColor="@color/error" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView> 
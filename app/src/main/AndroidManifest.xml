<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add the android:name attribute here -->
    <application
        android:name=".LuxeVistaApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LuxeVista_Hotel"
        tools:targetApi="31">

        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.detail.RoomDetailActivity"
            android:exported="false" />

        <activity
            android:name=".ui.profile.UserProfileActivity"
            android:exported="false" />

        <activity
            android:name=".ui.booking.BookingActivity"
            android:exported="false" />

        <activity
            android:name=".ui.service.ServiceDetailActivity"
            android:exported="false" />

        <activity
            android:name=".ui.booking.BookingHistoryActivity"
            android:exported="false" />

        <activity
            android:name=".ui.attraction.AttractionDetailActivity"
            android:exported="false" />

    </application>

</manifest>